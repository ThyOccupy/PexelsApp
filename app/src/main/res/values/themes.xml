<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PexelsApp" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen -->
    <style name="Theme.App.Starting.SplashScreen" parent="Theme.SplashScreen">
        <!-- Background -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- AnimatedIcon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/animation_splash_icon</item>

        <!-- Duration -->
        <item name="windowSplashScreenAnimationDuration">600</item>

        <!-- After the splash screen, switch to the main theme -->
        <item name="postSplashScreenTheme">@style/Theme.PexelsApp</item>
    </style>

</resources>